<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <h1><i class="fas fa-blog me-2"></i>Harsha Blogs</h1>
    <p>Welcome to my personal blog! Explore my thoughts, ideas, and stories.</p>
    <a href="/create" class="btn btn-light"><i class="fas fa-pen me-1"></i> Write a New Post</a>
  </div>
  <!-- Infinity Stones -->
  <div class="infinity-stone infinity-stone-1"></div>
  <div class="infinity-stone infinity-stone-2"></div>
  <div class="infinity-stone infinity-stone-3"></div>
  <div class="infinity-stone infinity-stone-4"></div>
  <div class="infinity-stone infinity-stone-5"></div>
  <div class="infinity-stone infinity-stone-6"></div>
</section>

<!-- Blog Posts -->
<div class="container">
  <% if (posts.length === 0) { %>
    <div class="text-center py-5">
      <h2 class="mb-3">No posts yet</h2>
      <p class="text-muted">Be the first to create a post!</p>
      <a href="/create" class="btn btn-primary mt-2"><i class="fas fa-plus-circle me-1"></i> Create New Post</a>
    </div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% posts.forEach(post => { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title fw-bold">
                <%= post.title %>
              </h5>
              <p class="card-text">
                <%= post.content.substring(0, 120) %><%= post.content.length > 120 ? '...' : '' %>
              </p>
            </div>
            <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
              <a href="/posts/<%= post._id %>" class="btn btn-sm btn-primary">
                <i class="fas fa-book-open me-1"></i> Read More
              </a>
              <div class="d-flex">
                <a href="/edit/<%= post._id %>" class="btn btn-sm btn-outline-primary rounded-pill me-2">
                  <i class="fas fa-edit"></i>
                </a>
                <form action="/delete/<%= post._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill" 
                    onclick="return confirm('Are you sure you want to delete this post?')">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
